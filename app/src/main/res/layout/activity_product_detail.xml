<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_detail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/image_view_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_view_product_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_detail"
        android:layout_marginTop="32dp"
        android:text="Product Name"

        android:textColor="#000"
        android:textSize="32dp"/>

    <TextView
        android:id="@+id/text_view_product_price_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_product_name_detail"
        android:layout_marginTop="16dp"
        android:text="Product Price"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="32dp"/>

    <TextView
        android:id="@+id/text_view_product_description_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        android:layout_below="@+id/text_view_product_price_detail"
        android:layout_marginTop="32dp"/>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textColor="#fff"
            android:background="@drawable/round_button_corner_left"
            android:layout_alignParentBottom="true"/>
        <View
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:background="#fff"/>

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy now"
            android:textColor="#fff"
            android:background="@drawable/button_round_corner_right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>


    </LinearLayout>



</RelativeLayout>