<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/app_bar"/>

    <ImageView
        android:id="@+id/image_view_empty_cart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/empty_cart"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_view_empty_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your cart is empty : ("
        android:layout_below="@+id/image_view_empty_cart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="24dp"/>

    <ScrollView
        android:id="@+id/scroll_view_cart_detail"
        android:layout_below="@+id/tool_bar"
        android:layout_above="@+id/relative_layout_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_cart"
                android:padding="10dp"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_above="@+id/button_checkout"
        android:id="@+id/relative_layout_total"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_sub_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Total"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/text_view_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:textAllCaps="false"
            android:layout_below="@+id/text_view_sub_total"/>
        <TextView
            android:id="@+id/text_view_delivery_charges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Charges"
            android:textAllCaps="false"
            android:layout_below="@+id/text_view_discount"/>
        <TextView
            android:id="@+id/text_view_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Amount"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_below="@+id/text_view_delivery_charges"/>


        <TextView
            android:id="@+id/text_view_sub_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$000.00"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/text_view_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-$000.00"
            android:textColor="@color/colorPink"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_view_sub_total_price"/>
        <TextView
            android:id="@+id/text_view_delivery_charges_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$000.00"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_view_discount_price"/>
        <TextView
            android:id="@+id/text_view_order_amount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$000.00"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_view_delivery_charges_price"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/round_corner_button" />
    <Button
        android:id="@+id/button_go_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Shopping"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/round_corner_button" />




</RelativeLayout>