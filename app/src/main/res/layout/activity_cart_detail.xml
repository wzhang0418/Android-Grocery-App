<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/app_bar"/>

    <ScrollView
        android:layout_below="@+id/tool_bar"
        android:layout_above="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:padding="10dp"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout

                android:id="@+id/relative_layout_total"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_view_sub_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Total"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/text_view_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:textAllCaps="false"
                    android:layout_below="@+id/text_view_sub_total"/>
                <TextView
                    android:id="@+id/text_view_delivery_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Charges"
                    android:textAllCaps="false"
                    android:layout_below="@+id/text_view_discount"/>
                <TextView
                    android:id="@+id/text_view_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Amount"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:layout_below="@+id/text_view_delivery_charges"/>


                <TextView
                    android:id="@+id/text_view_sub_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$000.00"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/text_view_discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-$000.00"
                    android:textColor="@color/colorPink"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/text_view_sub_total_price"/>
                <TextView
                    android:id="@+id/text_view_delivery_charges_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$000.00"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/text_view_discount_price"/>
                <TextView
                    android:id="@+id/text_view_order_amount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$000.00"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/text_view_delivery_charges_price"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/round_corner_button"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>