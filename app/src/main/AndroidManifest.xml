<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apolis.groceryapplication1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.HomeActivity"></activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.OrderConfirmationActivity" />
        <activity android:name=".activities.PaymentActivity" />
        <activity android:name=".activities.AddAddressActivity" />
        <activity android:name=".activities.AddressActivity" />
        <activity android:name=".activities.CartDetailActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.CategoryActivity" />
        <activity android:name=".activities.ProductDetailActivity" />
        <activity android:name=".activities.SubCategoryActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>